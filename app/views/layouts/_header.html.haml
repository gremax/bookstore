%header.navbar
  .container
    .navbar-header
      = link_to 'Bookstore', root_path, class: 'navbar-brand logo'
    %nav
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          - if can? :access, :rails_admin
            %li= link_to 'Admin', rails_admin.dashboard_path
          %li= link_to current_user.email, edit_user_registration_path
          %li= link_to 'Sign out', destroy_user_session_path, method: :delete
          - if current_user.avatar?
            %li= image_tag current_user.avatar.thumb, class: 'img-circle'
        - else
          %li= link_to 'Sign in', new_user_session_path
          %li= link_to 'Sign up', new_user_registration_path
