%h2
  = @book.title

%ul
  %li= image_tag @book.cover
  %li= number_to_currency @book.price
  %li= @book.description
  %li= @book.author.full_name

  = button_to 'Add to Cart', order_items_path(book_id: @book),
    class: 'btn btn-success btn-sm'

- if can? :manage, :all
  %p
    = link_to rails_admin.edit_path(model_name: 'Book', id: @book.id) do
      %span.glyphicon.glyphicon-pencil{'aria-hidden': true}
    = link_to rails_admin.delete_path(model_name: 'Book', id: @book.id),
      data: { confirm: 'Are you sure?' } do
      %span.glyphicon.glyphicon-remove{'aria-hidden': true}
